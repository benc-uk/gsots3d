{
  "compilerOptions": {
    // Only use tsc for type checking
    "noEmit": true,

    // Sensible defaults
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    
    // Stops tsc from complaining about ESM
    "target": "es2020",
    
    // We have to use this with ESM
    "moduleResolution": "NodeNext",

    // With moduleResolution set to NodeNext, we have to set this to true
    "allowImportingTsExtensions": true,

    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
}