{
  "name": "gsots3d",
  "version": "0.0.1",
  "description": "Getting S**t On The Screen in 3D. A twlg and WebGL2 wrapper for 3D graphics in the browser.",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./parsers": "./dist/parsers/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts src && prettier --check src",
    "lint-fix": "eslint --ext .ts src --fix && prettier --write src",
    "check": "tsc",
    "build": "tsup",
    "watch": "npm run build && run-when-changed --watch 'src/**/*.ts' --watch '**/*.glsl' --exec 'npm run build'",
    "build-bundle": "tsup --config tsup.config-bundle.js && mv dist-bundle/index.js dist-bundle/gsots3d.js",
    "watch-bundle": "npm run build-bundle && run-when-changed --watch 'src/**/*.ts' --watch '**/*.glsl' --exec 'npm run build-bundle'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "webgl",
    "graphics",
    "3d",
    "twgl",
    "typescript"
  ],
  "files": [
    "dist/",
    "readme.md"
  ],
  "author": "Ben Coleman",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "prettier": "^2.8.8",
    "run-when-changed": "^2.1.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "loglevel": "^1.8.1",
    "twgl.js": "^5.3.1"
  }
}
